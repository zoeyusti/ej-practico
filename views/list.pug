extends layout

block content
	.contenedor
		input#busqueda.casilla(type='text' placeholder='Buscar...')
		table#verLista
			tr
				th Nombre
				th Apellido
				th Tel√©fono
				th Email
				th
			each usuario in usuarios

				tr(id=usuario.id).aBuscar
					td #{usuario.nombre}
					td #{usuario.apellido}
					td #{usuario.telefono}
					td #{usuario.email}
					td
						button(style='font-size:20px')
							i.fas.fa-trash-alt.eliminar(data-id=usuario.id)
